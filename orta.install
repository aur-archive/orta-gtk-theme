msg() {
    echo -e '\e[1;32m===> \e[1;37m'"$1"
}

msg2() {
    echo -e '\e[1;34m  -> \e[1;37m'"$1"
}

post_install() {
    msg "to install chrom(e/ium) themes, just run"
    msg2 "orta-install-chrome-themes"
    msg "or to remove"
    msg2 "orta-install-chrome-themes --remove"
}

post_upgrade() {
    post_install
}
